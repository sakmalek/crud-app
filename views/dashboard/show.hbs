<div class="w-full flex flex-col items-center overflow-y-scroll">

    <div class="w-full md:w-1/2 flex flex-col items-center h-64">
        <div class="w-full px-4">
            <div class="flex flex-col items-center relative">
                <div class="fixed z-40 top-0 w-96">
                    <div class="my-2 p-1 bg-white flex border border-gray-200 rounded">
                        <div class="flex flex-auto flex-wrap"></div>
                        <input id="search-sl" onkeyup="searchInSuggestionList()" onfocus="show('suggestion-list')"
                               name="nft-name"
                               placeholder="Search by name"
                               class="p-1 px-2 appearance-none outline-none w-full text-gray-800">
                        <div class="text-gray-300 w-8 py-1 pl-2 pr-1 border-l flex items-center border-gray-200">
                            <button onclick="showHide('suggestion-list')"
                                    class="cursor-pointer w-6 h-6 text-gray-600 outline-none focus:outline-none">
                                <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="none"
                                     viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"
                                     stroke-linecap="round"
                                     stroke-linejoin="round" class="feather feather-chevron-up w-4 h-4">
                                    <polyline points="18 15 12 9 6 15"></polyline>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
                <div id="suggestion-list"
                     class="fixed shadow bg-white top-14 z-40 w-96 lef-0 rounded max-h-select overflow-y-auto svelte-5uyqqj hidden">
                    {{#each nfts}}
                        <form action="/dashboard/{{asset_contract.address}}/{{token_id}}/{{../dashboardId}}"
                              method="POST"
                              class="flex flex-col w-full">
                            <div class="flex flex-col w-full">
                                <div class="cursor-pointer w-full border-gray-100 rounded-t border-b hover:bg-teal-100 hover:bg-grey-300 nft-target">
                                    <div class="flex w-full items-center p-2 pl-2 border-transparent border-l-2 relative hover:border-teal-100">
                                        <div class="w-6 flex flex-col items-center">
                                            <div class="flex relative w-5 h-5 bg-orange-500 justify-center items-center m-1 mr-2 w-4 h-4 mt-1 rounded-full ">
                                                <img class="rounded-full" alt="A"
                                                     src={{image_url}}></div>
                                        </div>
                                        <div class="w-full items-center flex">
                                            <div class="mx-2 -mt-1">{{name}}
                                                <div class="text-xs truncate w-full normal-case font-normal -mt-1 text-gray-500">
                                                    {{asset_contract.name}}
                                                </div>
                                            </div>
                                        </div>
                                        <button class="p-2" type="submit">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18"
                                                 viewBox="0 0 24 24" fill="none" stroke="#000000" stroke-width="2"
                                                 stroke-linecap="round" stroke-linejoin="round">
                                                <line x1="12" y1="5" x2="12" y2="19"></line>
                                                <line x1="5" y1="12" x2="19" y2="12"></line>
                                            </svg>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    {{/each}}

                </div>
                {{#each dashboard.nfts}}
                    <div
                            class="relative flex flex-col md:flex-row md:space-x-5 space-y-3 md:space-y-0 rounded-xl shadow-lg p-3 max-w-xs md:max-w-3xl mx-auto border border-white bg-white">
                        <div class="w-full md:w-1/3 bg-white grid place-items-center">
                            <img src={{image_url}} alt="{{name}} logo" class="rounded-xl"/>
                        </div>
                        <div class="w-full md:w-2/3 bg-white flex flex-col space-y-2 p-3">
                            <div class="flex justify-between item-center">
                                <p class="text-gray-500 font-medium hidden md:block">NFT</p>
                                <div class="">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-pink-500"
                                         viewBox="0 0 20 20"
                                         fill="currentColor">
                                        <path fill-rule="evenodd"
                                              d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z"
                                              clip-rule="evenodd"/>
                                    </svg>
                                </div>
                                <div class="bg-gray-200 px-3 py-1 rounded-full text-xs font-medium text-gray-800 hidden md:block">
                                    Remove
                                </div>
                            </div>
                            <h3 class="font-black text-gray-800 md:text-3xl text-xl">{{name}}</h3>
                            <p class="md:text-lg text-gray-500 text-base">{{description}}</p>
                            <p class="text-xl font-black text-gray-800">
                                PRICE
                                <span class="font-normal text-gray-600 text-base">/night</span>
                            </p>
                        </div>
                    </div>

                {{/each}}
            </div>
        </div>
    </div>
</div>






