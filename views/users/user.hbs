<div class="w-full h-full flex flex-col justify-center items-center">
    {{#with nft}}
        <a href="/dashboards">


            <div
                    class="max-w-md bg-white rounded-xl overflow-hidden cursor-pointer shadow-lg hover:shadow-2xl hover:scale-105 transform transition-all duration-500">
                <div class="p-4">
                    <img class="rounded-xl" src={{image_url}} alt={{name}} />
                </div>
                <div class="flex justify-between p-6">
                    <div class="flex items-center space-x-4">
                        <img class="h-10 rounded-full"
                             src={{image_url}}
                             alt=""/>
                        <h1 class="text-lg text-gray-900 font-bold">{{name}}</h1>
                    </div>
                    <div class="flex space-x-6 items-center">
                        <div class="flex space-x-2 items-center">
                        <span class="text-gray-700 font-semibold">{{ethPrice last_sale.total_price
                                                                             last_sale.payment_token.decimals}}</span>
                            <span>
                            <img class="h-4" src={{last_sale.payment_token.image_url}} alt={{name}} />
                        </span>
                        </div>
                        <div class="flex space-x-2 items-center pr-4">
                        <span class="text-gray-700 font-semibold">{{usdPrice last_sale.total_price
                                                                             last_sale.payment_token.decimals
                                                                             last_sale.payment_token.usd_price}}</span>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    {{/with}}

    {{#if user}}
        <p class="bold text-5xl py-8">Welcome, {{ user.username }}!</p>
    {{else}}
        <p class="text-3xl">Still no logged in user, sorry!</p>
    {{/if}}
</div>